<?xml version="1.0" ?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- âœ… MINIMAL: Only essential sensors for PX4 (no duplicates, no extras) -->
  
  <xacro:if value="$(arg enable_sensors)">    
      <!-- Main IMU for flight control -->
      <xacro:default_imu namespace="${namespace}" parent_link="base_link" />              <!-- Creates imu_sensor -->
      <xacro:default_gps namespace="${namespace}" parent_link="base_link" /> 
      <xacro:default_pressure_sensor namespace="${namespace}" parent_link="base_link" />
      <xacro:default_magnetometer namespace="${namespace}" parent_link="base_link" />    <!-- Creates mag_sensor -->
  </xacro:if>

    <!-- SEPARATE BLOCK: Ground truth only if needed for debugging -->
  <!-- <xacro:if value="$(arg enable_ground_truth)">
      <xacro:ground_truth_imu_and_odometry namespace="${namespace}" parent_link="base_link" /> 
  </xacro:if> -->
</robot>