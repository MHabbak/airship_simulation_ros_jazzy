<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- FIXED: Asus Camera Macro for Gazebo Harmonic -->
  <xacro:macro name="asus_camera" params="name parent *origin">
    
    <!-- Camera Link -->
    <link name="${name}_link">
      <inertial>
        <mass value="0.564"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="0.003881243" ixy="0.0" ixz="0.0"
                 iyy="0.000498940" iyz="0.0"
                 izz="0.003879257"/>
      </inertial>
      
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.073 0.276 0.072"/>
        </geometry>
        <material name="dark_grey">
          <color rgba="0.3 0.3 0.3 1.0"/>
        </material>
      </visual>
      
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.073 0.276 0.072"/>
        </geometry>
      </collision>
    </link>

    <!-- Camera Joint -->
    <joint name="${name}_joint" type="fixed">
      <xacro:insert_block name="origin"/>
      <parent link="${parent}"/>
      <child link="${name}_link"/>
    </joint>

    <!-- RGB Camera Frame -->
    <link name="${name}_rgb_frame"/>
    
    <joint name="${name}_rgb_joint" type="fixed">
      <origin xyz="0.0 -0.02 0.0" rpy="0 0 0"/>
      <parent link="${name}_link"/>
      <child link="${name}_rgb_frame"/>
    </joint>

    <!-- RGB Camera Optical Frame -->
    <link name="${name}_rgb_optical_frame"/>
    
    <joint name="${name}_rgb_optical_joint" type="fixed">
      <origin xyz="0 0 0" rpy="-1.5708 0 -1.5708"/>
      <parent link="${name}_rgb_frame"/>
      <child link="${name}_rgb_optical_frame"/>
    </joint>

    <!-- Depth Camera Frame -->
    <link name="${name}_depth_frame"/>
    
    <joint name="${name}_depth_joint" type="fixed">
      <origin xyz="0.0 -0.02 0.0" rpy="0 0 0"/>
      <parent link="${name}_link"/>
      <child link="${name}_depth_frame"/>
    </joint>

    <!-- Depth Camera Optical Frame -->
    <link name="${name}_depth_optical_frame"/>
    
    <joint name="${name}_depth_optical_joint" type="fixed">
      <origin xyz="0 0 0" rpy="-1.5708 0 -1.5708"/>
      <parent link="${name}_depth_frame"/>
      <child link="${name}_depth_optical_frame"/>
    </joint>

    <!-- Gazebo Harmonic Camera Plugin - CORRECTED -->
    <gazebo reference="${name}_link">
      <!-- RGB Camera -->
      <sensor name="${name}_rgb_camera" type="camera">
        <camera>
          <horizontal_fov>1.047</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.1</near>
            <far>100</far>
          </clip>
        </camera>
        <always_on>1</always_on>
        <update_rate>30</update_rate>
        <visualize>true</visualize>
        <!-- FIXED: Correct plugin filename for Gazebo Harmonic -->
        <plugin filename="libgz-sim-sensors-system.so" name="gz::sim::systems::Sensors">
          <ros>
            <namespace></namespace>
            <remapping>~/image:=${name}/rgb/image_raw</remapping>
            <remapping>~/camera_info:=${name}/rgb/camera_info</remapping>
          </ros>
        </plugin>
      </sensor>

      <!-- Depth Camera -->
      <sensor name="${name}_depth_camera" type="depth_camera">
        <camera>
          <horizontal_fov>1.047</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
          </image>
          <clip>
            <near>0.1</near>
            <far>100</far>
          </clip>
        </camera>
        <always_on>1</always_on>
        <update_rate>30</update_rate>
        <visualize>true</visualize>
        <!-- FIXED: Correct plugin filename for Gazebo Harmonic -->
        <plugin filename="libgz-sim-sensors-system.so" name="gz::sim::systems::Sensors">
          <ros>
            <namespace></namespace>
            <remapping>~/image_depth:=${name}/depth/image_raw</remapping>
            <remapping>~/points:=${name}/depth/points</remapping>
            <remapping>~/camera_info:=${name}/depth/camera_info</remapping>
          </ros>
        </plugin>
      </sensor>
    </gazebo>

  </xacro:macro>

</robot>