          <xacro:unless value="${use_mesh_file}">
            <box size="${body_length} ${body_width} ${body_height}"/>
          </xacro:unless>
        </geometry>
      </collision>
    </link>
    <gazebo reference="${link_name}_link">
      <kp>1000000.0</kp>
