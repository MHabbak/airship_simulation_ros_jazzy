          <xacro:unless value="${use_mesh_file}">
            <sphere radius="${body_radius}"/>
          </xacro:unless>
        </geometry>
        <material name="${link_name}_material">
          <color rgba="0.8 0.5 0.5 1.0"/>
        </material>
      </visual>
      
      <collision>
        <xacro:insert_block name="origin" />
        <geometry>
          <xacro:if value="${use_mesh_file}">
