  <!-- Sphere model macro -->
  <xacro:macro name="sphere_model" 
    params="robot_namespace link_name mass body_radius 
            use_mesh_file mesh_file *origin *inertia">
    <link name="${link_name}_link">
      <inertial>
        <mass value="${mass}"/>
